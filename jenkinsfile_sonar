pipeline {
    agent {
         label 'javaproject'
          }
    stages {
        stage('compile') {
	      steps {
               echo 'compiling..'
	  	       git url: 'https://github.com/lerndevops/DevOpsClassCodes'
	           sh script: '/opt/maven/bin/mvn compile'
           }
        }
        stage('codereview-pmd') {
	      steps {
                echo 'codereview..'
	        	sh script: '/opt/maven/bin/mvn -P metrics pmd:pmd'
                }
	      post {
               success {
		       recordIssues enabledForFailure: true, tool: pmdParser(pattern: '**/target/pmd.xml')
               }
           }		
        }
        stage('unit-test') {
	      steps {
                echo 'unittest..'
	            sh script: '/opt/maven/bin/mvn test'
                 }
	      post {
               success {
                   junit 'target/surefire-reports/*.xml'
               }
           }			
        }
        stage('codecoverate') {
	      steps {
                echo 'codecoverage..'
		        sh script: '/opt/maven/bin/mvn verify'
                }
	      post {
               success {
	             jacoco exclusionPattern: '**/*Test*.class', inclusionPattern: '**/*.class'
              }
           }		
        }
        stage('package') {
	      steps {
                echo 'package..'
		        sh script: '/opt/maven/bin/mvn package'	
           }		
        }
        stage('SonarQube Analysis') {
		  environment {
                  SCANNER_HOME = tool 'sonar-scanner'
                    }
            steps {
                withSonarQubeEnv('SonarQube') {
		sh script: '/opt/sonar-scanner -Dsonar.projectKey=sampleapp -Dsonar.ProjectName=sampleapp -Dsonar.sources=src/main/java/ -Dsonar.java.binaries=target/classes/ -Dsonar.language=java -Dsonar.java.source=1.11'
                echo 'SonarQube Analysis Completed'
                }
            }
        }
    }
}
